{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["esnext"],
    "rootDir": "./src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
